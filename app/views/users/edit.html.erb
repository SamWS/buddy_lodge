

<div id="formPage">

  <div id="formContainer">


    <div class="row">
    <%= form_tag "/users/#{ current_user.id }", method: 'put' do %>
        <div class="row">
          <div class="input-field col s6">
            <input value="<%= current_user.name %>"id="first_name" type="text" class="validate" name="name">
            <label for="first_name"></label>
          </div>
          <div class="input-field col s6">
            <input value="<%= current_user.surname %>" id="last_name" type="text" class="validate" name="surname">
            <label for="last_name"></label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <input value="<%= current_user.gender %>" id="gender" type="text" class="validate" name="gender">
            <label for="gender"></label>
          </div>
          <div class="input-field col s6">
            <input type="date" class="datepicker" name="birthdate">
            <label for="birthdate"></label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input value="<%= current_user.location %>" id="location" type="text" class="validate" name="location">
            <label for="location"></label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input value="<%= current_user.email %>" id="email" type="email" class="validate" name="email">
            <label for="email"></label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="password" type="password" class="validate" name="password">
            <label for="password">Password</label>
          </div>
        </div>
        <div id="submitUserBtn">
          <button>submit</button>
        </div>
      <% end %>
      <%= form_tag "/users/#{ current_user.id }",method: 'delete' do %>
        <button>delete my account</button>
      <% end %>
    </div>

    </div>
    
  </div>
    
  
</div>